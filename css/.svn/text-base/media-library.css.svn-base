/*@group MediaLibrary*/

#media-library, #image-picker {
  position:absolute;
  display:none;
  top:50%;
  left:50%;
  width:600px;
  height:400px;
  margin-left:-300px;
  margin-top:-200px;
  
}

#media-library .title, #image-picker .title {
  position:absolute;
  top:10px;
  left:0;
  right:0;
  text-align:center;
}

#media-library .images, #image-picker .images {
  position:absolute;
  top:50px;
  left:10px;
  right:10px;
  bottom:50px;
}

#media-library .buttons {
  position:absolute;
  bottom:10px;
  left:10px;
  right:10px;
  height:30px;
}

#media-library .images .image, #edit-image-list .image, #image-picker .images .image {
  float:left;
  width:100px;
  height:100px;
  margin:10px;
}

#media-library .close, #image-picker .close {
  position:absolute;
  top:0;
  right:0;
  width:24px;
  height:24px;
  background-image: url(../images/cancel.png);
  cursor:pointer;
  z-index:100;
}

