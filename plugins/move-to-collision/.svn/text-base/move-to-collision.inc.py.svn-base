def moveToCollision(self, direction, amount, object):
  v = Vector(direction, amount)
  v.magnitude/=10
  if self.collisionAt(0, 0, object):
    for i in range(10):
      self.moveTo(-v.x, -v.y, True)
      if not self.collisionAt(0, 0, object):
        return
  else:
    for i in range(10):
      self.moveTo(v.x, v.y, True)
      if self.collisionAt(0, 0, object):
        self.moveTo(-v.x, -v.y, True)
        return
